<style>
  .terms-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Header */
  .terms-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e0ddd8;
  }

  .terms-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
  }

  .effective-date {
    font-size: 0.9rem;
    color: #888;
    margin-bottom: 1.5rem;
  }

  .intro-text {
    font-size: 1rem;
    line-height: 1.8;
    color: #555;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Navigation */
  .terms-nav {
    background-color: #F7F3EE;
    border: 1px solid #ebe7e0;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 3rem;
  }

  .nav-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #2C5F7C;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 0.75rem;
  }

  .nav-links a {
    padding: 0.5rem 1rem;
    background-color: white;
    border: 1px solid #e0ddd8;
    border-radius: 8px;
    text-decoration: none;
    color: #1a1a1a;
    font-size: 0.9rem;
    transition: all 0.2s;
    text-align: center;
  }

  .nav-links a:hover {
    border-color: #2C5F7C;
    color: #2C5F7C;
    transform: translateY(-1px);
  }

  /* Content Sections */
  .terms-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .terms-section {
    position: relative;
    scroll-margin-top: 2rem;
  }

  .section-number {
    position: absolute;
    left: -60px;
    top: 0;
    font-size: 3rem;
    font-weight: 700;
    color: #f0f0f0;
    line-height: 1;
  }

  .terms-section h2 {
    font-size: 1.8rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #2C5F7C;
  }

  .section-content {
    font-size: 1rem;
    line-height: 1.8;
    color: #333;
  }

  .section-content p {
    margin-bottom: 1rem;
  }

  /* Service Grid */
  .service-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .service-item {
    background-color: #FAFAF8;
    border: 1px solid #e0ddd8;
    border-radius: 8px;
    padding: 1.5rem;
  }

  .service-item strong {
    display: block;
    font-size: 1rem;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
  }

  .service-item p {
    font-size: 0.9rem;
    color: #666;
    margin: 0;
  }

  /* Highlight Box */
  .highlight-box {
    background-color: #E8F0F5;
    border-left: 4px solid #2C5F7C;
    padding: 1.5rem;
    border-radius: 8px;
    margin-top: 1.5rem;
  }

  .highlight-box strong {
    display: block;
    color: #2C5F7C;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .highlight-box p {
    margin: 0;
    color: #555;
  }

  /* Warning Box */
  .warning-box {
    background-color: #FFF8E1;
    border-left: 4px solid #FFA726;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .warning-box strong {
    display: block;
    color: #F57C00;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .warning-box p {
    margin: 0;
    color: #555;
  }

  /* Info Box */
  .info-box {
    background-color: #F7F3EE;
    border: 1px solid #ebe7e0;
    border-radius: 12px;
    padding: 1.5rem;
    margin-top: 1.5rem;
  }

  .info-row {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 0.75rem 0;
  }

  .info-row:not(:last-child) {
    border-bottom: 1px solid #e0ddd8;
  }

  .info-row strong {
    flex-shrink: 0;
    font-size: 0.9rem;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-weight: 600;
  }

  .info-row strong.prohibited {
    background-color: #FFEBEE;
    color: #C62828;
  }

  .info-row strong.allowed {
    background-color: #E8F5E9;
    color: #2E7D32;
  }

  .info-row span {
    flex: 1;
    line-height: 1.6;
  }

  /* Info List */
  .info-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }

  .info-list li {
    padding: 0.75rem 0 0.75rem 2rem;
    position: relative;
  }

  .info-list li::before {
    content: '‚Ä¢';
    position: absolute;
    left: 0.5rem;
    color: #2C5F7C;
    font-weight: 700;
    font-size: 1.2rem;
  }

  /* Obligation List */
  .obligation-list {
    list-style: none;
    padding: 0;
    margin-top: 1.5rem;
  }

  .obligation-list li {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    background-color: #FAFAF8;
    border: 1px solid #e0ddd8;
    border-radius: 8px;
    margin-bottom: 0.75rem;
  }

  .obligation-list .bullet {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    background-color: #FFEBEE;
    color: #C62828;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .obligation-list span:last-child {
    flex: 1;
    line-height: 1.6;
  }

  /* Liability Grid */
  .liability-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .liability-item {
    background-color: #FAFAF8;
    border: 1px solid #e0ddd8;
    border-radius: 8px;
    padding: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Contact Box */
  .contact-box {
    background-color: white;
    border: 1px solid #e0ddd8;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    margin-top: 1.5rem;
  }

  .contact-box strong {
    display: block;
    font-size: 0.85rem;
    color: #888;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .contact-email {
    display: inline-block;
    font-size: 1.3rem;
    font-weight: 600;
    color: #2C5F7C;
    text-decoration: none;
    transition: color 0.2s;
  }

  .contact-email:hover {
    color: #1a3c50;
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .terms-page {
      padding: 1.5rem 1rem;
    }

    .terms-header h1 {
      font-size: 2rem;
    }

    .section-number {
      display: none;
    }

    .terms-section h2 {
      font-size: 1.5rem;
    }

    .nav-links {
      grid-template-columns: 1fr;
    }

    .info-row {
      flex-direction: column;
      gap: 0.5rem;
    }

    .service-grid,
    .liability-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
