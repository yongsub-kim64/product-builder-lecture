---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { games } from '../../../data/games';
---

<BaseLayout
  title="Playground"
  titleOverride="Vibe Coding Playground | chulbuji.com"
  description="A space for 1-file demos built with AI collaboration. Play Breakout, Tetris, Snake and more Vibe Coding creations."
>
  <div class="pg-page">

    <header class="pg-hero">
      <h1 class="pg-hero__title">Vibe Coding Playground</h1>
      <p class="pg-hero__sub">A space for 1-file demos built with AI collaboration</p>
      <p class="pg-hero__desc">
        No complex setup — each demo is a single HTML file born from a Vibe Coding session with Claude.<br>
        Play directly in your browser.
      </p>
    </header>

    <section class="pg-grid">
      {games.map(game => (
        <article class="pg-card">
          <div class="pg-card__body">
            <h2 class="pg-card__title">{game.title}</h2>
            <p class="pg-card__desc">{game.descriptionEn}</p>
            <div class="pg-card__tags">
              {game.tags.map(tag => (
                <span class="pg-tag">{tag}</span>
              ))}
            </div>
          </div>
          <div class="pg-card__foot">
            <a href={`/en/playground/${game.id}`} class="pg-btn-play">
              Play Now →
            </a>
          </div>
        </article>
      ))}
    </section>

  </div>
</BaseLayout>

<style>
  .pg-page {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 1.5rem 5rem;
  }

  .pg-hero {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .pg-hero__title {
    font-size: clamp(2rem, 1.6rem + 2vw, 3rem);
    font-weight: 800;
    color: #111827;
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .pg-hero__sub {
    font-size: clamp(1rem, 0.9rem + 0.5vw, 1.2rem);
    color: #4B5563;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .pg-hero__desc {
    font-size: 0.95rem;
    color: #6B7280;
    line-height: 1.7;
    max-width: 560px;
    margin: 0 auto;
  }

  .pg-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .pg-card {
    background: #fff;
    border: 1px solid #E5E7EB;
    border-radius: 16px;
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    transition: box-shadow 0.2s, transform 0.2s, border-color 0.2s;
  }

  .pg-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.09);
    transform: translateY(-3px);
    border-color: #C7D2FE;
  }

  .pg-card__body {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .pg-card__title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #111827;
    margin: 0;
  }

  .pg-card__desc {
    font-size: 0.9rem;
    color: #6B7280;
    line-height: 1.6;
    margin: 0;
  }

  .pg-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.25rem;
  }

  .pg-tag {
    display: inline-block;
    padding: 0.2rem 0.65rem;
    background: #F3F4F6;
    color: #374151;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 999px;
  }

  .pg-card__foot {
    display: flex;
    justify-content: flex-end;
  }

  .pg-btn-play {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.6rem 1.25rem;
    background: #1E3A8A;
    color: #fff;
    font-size: 0.9rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.2s;
  }

  .pg-btn-play:hover {
    background: #1e40af;
  }

  @media (max-width: 640px) {
    .pg-page {
      padding: 2rem 1rem 4rem;
    }

    .pg-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
