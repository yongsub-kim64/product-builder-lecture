---
import { getLangFromUrl, useTranslations, getBasePath } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const basePath = getBasePath(lang);
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <h3>chulbuji</h3>
        <p>{t('site.description')}</p>
      </div>
      
      <nav class="footer-nav">
        <a href={basePath + '/privacy'}>{t('footer.privacy')}</a>
        <a href={basePath + '/terms'}>{t('footer.terms')}</a>
        <a href={basePath + '/contact'}>{t('footer.contact')}</a>
      </nav>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} chulbuji. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid #e5e5e5;
    padding: clamp(2rem, 1.6rem + 2vw, 3rem) 0 clamp(1rem, 0.8rem + 1vw, 1.5rem);
    margin-top: clamp(3rem, 2rem + 5vw, 5rem);
    background: #fafafa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 0.8rem + 1vw, 2rem);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: clamp(1.5rem, 1.2rem + 1.5vw, 2.5rem);
    margin-bottom: clamp(1.5rem, 1.2rem + 1.5vw, 2rem);
  }

  .footer-brand h3 {
    font-size: clamp(1.125rem, 1.05rem + 0.375vw, 1.375rem);
    margin-bottom: clamp(0.375rem, 0.3rem + 0.375vw, 0.5rem);
  }

  .footer-brand p {
    color: #666;
    font-size: clamp(0.875rem, 0.85rem + 0.125vw, 0.9375rem);
    line-height: 1.6;
    max-width: 50ch;
  }

  .footer-nav {
    display: flex;
    gap: clamp(1.25rem, 1rem + 1.25vw, 1.75rem);
  }

  .footer-nav a {
    text-decoration: none;
    color: #666;
    font-size: clamp(0.9375rem, 0.9rem + 0.1875vw, 1.0625rem);
    transition: color 0.2s;
    font-weight: 500;
    /* Better touch targets */
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0;
  }

  .footer-nav a:hover {
    color: #667eea;
  }

  .footer-bottom {
    border-top: 1px solid #e5e5e5;
    padding-top: clamp(1rem, 0.8rem + 1vw, 1.5rem);
    text-align: center;
  }

  .footer-bottom p {
    color: #999;
    font-size: clamp(0.8125rem, 0.8rem + 0.0625vw, 0.875rem);
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 2rem;
    }

    .footer-brand p {
      max-width: 100%;
    }

    .footer-nav {
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-nav a {
      /* Ensure good touch targets on mobile */
      min-height: 48px;
    }
  }
</style>
